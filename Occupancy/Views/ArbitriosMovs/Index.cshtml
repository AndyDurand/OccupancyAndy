            </p>
        </div>
        <p></p>

        @Html.ActionLink("Agregar Arbitrio", "Create")
        <br />
        <br />

        <table id="miTabla" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Arbitrio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NaturalezaArbitrio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreCorto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Departamentos.Departamento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Espacios.Espacio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EsCorriente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TieneAdcional)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TieneRecargos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EsRezago)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TieneAdicionalRezago)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TieneRecargosRezago)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TieneMulta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TieneHonorarios)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TieneEjecucion)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Arbitrio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NaturalezaArbitrio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreCorto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Departamentos.Departamento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Espacios.Espacio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EsCorriente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TieneAdcional)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TieneRecargos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EsRezago)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TieneAdicionalRezago)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TieneRecargosRezago)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TieneMulta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TieneHonorarios)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TieneEjecucion)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.IDArbitrioMov }) |
                            @Html.ActionLink("Details", "Details", new { id = item.IDArbitrioMov }) |
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.IDArbitrioMov })*@
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

