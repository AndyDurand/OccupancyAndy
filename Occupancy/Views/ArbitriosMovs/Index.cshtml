@model IEnumerable<Occupancy.Models.ArbitriosMov>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<!-- Panel --->
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Arbitrios de Ordenes de Pago </h3>
    </div>
    <div class="panel-body">
        <div>
            <p class="alert alert-warning">
                @*<span class="glyphicon glyphicon-check" aria-hidden="true" style="font-size: 25px"></span>*@
