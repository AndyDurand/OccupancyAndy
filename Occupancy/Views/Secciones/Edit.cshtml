@model Occupancy.Models.Secciones

@{
    ViewBag.Title = "Edit Sec";
}
<head>

</head>
<body>
    <br />
    <br />
    <div class="container">
        <div class="panel-info">
            <div class="panel-heading">
                @*<h4 class="panel-title"><span class="glyphicon glyphicon-screenshot" aria-hidden="true" style="font-size: 25px"></span> <strong>  Editar  Sección  Clave: @Model.IDSeccion</strong></h4>*@
                <div style="text-align:center;">
                    <img src="~/Content/images/park.png" width="40" height="40" />
                    <h4><strong> Editar  Sección  Clave: @Model.IDSeccion</strong></h4>
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">                        
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IDSeccion)
                        @Html.HiddenFor(model => model.IDEspacio)


                        <div class="form-group">
                            @Html.LabelFor(model => model.Seccion, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Seccion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Seccion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                }
                <!-- Aqui es regresar a VieNav, list de las Naves de x Espacio-->
                <div class="row">
                    <div class="col-md-4">
                        @Html.ActionLink("Regresar a Secciones", "ViewSec", new { idEsp = Model.IDEspacio })
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>