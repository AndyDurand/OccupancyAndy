@model Occupancy.Models.Contratos

@{
    ViewBag.Title = "Contratos Editar";
}
<header>

</header>
<body>
    <br />
    <br />
    <div class="container">
        <div class="panel panel-info">
            <div class="panel panel-heading">
                <div style="text-align:center;">
                    <img src="~/Content/images/deal.png" width="50" height="50" />
                    <h3><strong> Editar Contrato / Concesión a :  @ViewBag.nombrePersona </strong></h3>
                    <h3>Local: @Model.Locales.Local</h3>
                    <h3>Folio Persona: @Model.IDPersona</h3>
                </div>
            </div>
            <div class="panel-body">
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IDContrato)
                        @Html.HiddenFor(model => model.IDPersona)
                        @Html.HiddenFor(model => model.IDLocal)
                        @Html.HiddenFor(model => model.Activo)

                        @*<div class="form-group">
                             @Html.LabelFor(model => model.IDPersona, "IDPersona", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("IDPersona", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IDPersona, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                        <div class="form-group">
                            <div class="alert alert-warning">
                                <strong>Giro. </strong> Seleccione el Giro comercial.
                            </div>
                            @Html.LabelFor(model => model.IDGiro, "IDGiro", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("IDGiro", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IDGiro, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="alert alert-warning">
                                <strong>Tipo de Ocupación. </strong> Seleccione el Tipo de Ocupación. Si no va a establecer un Contrato, seleccione la primera opción.
                            </div>
                            @Html.LabelFor(model => model.IDTipoOcupacionUso, "IDTipoOcupacionUso", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("IDTipoOcupacionUso", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IDTipoOcupacionUso, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.EsContrato, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.EsContrato)
                                    @Html.ValidationMessageFor(model => model.EsContrato, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                         <div class="form-group">
                            <div class="alert alert-warning">
                                <strong>Nombre comercial. </strong> Capture el nombre comercial, si es que tiene.
                            </div>
                            @Html.LabelFor(model => model.NombreComercial, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NombreComercial, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NombreComercial, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="alert alert-warning">
                                <strong>Fechas. </strong> Indique las Fechas que se le solicita.
                            </div>
                            @Html.LabelFor(model => model.FechaContrato, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @*@Html.EditorFor(model => model.FechaContrato, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.EditorFor(model => model.FechaContrato, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FechaContrato, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.FechaInicio, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FechaInicio, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.FechaVencim, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FechaVencim, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FechaVencim, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NumYearsVigencia, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NumYearsVigencia, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NumYearsVigencia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="alert alert-warning">
                                <strong>Fiador. </strong> Capture el nombre del Fiador, si es que aplica.
                            </div>
                            @Html.LabelFor(model => model.NombreFiador, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NombreFiador, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NombreFiador, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="alert alert-warning">
                                <strong>Día de pago. </strong> Indique el valor del día que será el tope o máximo para que realice el pago.
                            </div>
                            @Html.LabelFor(model => model.DiaFijoPago, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DiaFijoPago, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DiaFijoPago, "", new { @class = "text-danger" })
                            </div>
                        </div>                        

                        <div class="form-group">
                            <div class="alert alert-warning">
                                <strong>Observaciones. </strong> Capture las Observaciones que crea pertinentes a este Contrato/Permiso/Concesión.
                            </div>
                            @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-success" />
                            </div>
                        </div>
                    </div>}

            </div>
        </div>
        <div>
            @Html.ActionLink("Regresar a Contratos", "IndexAdmin")
        </div>
    </div>
</body>


