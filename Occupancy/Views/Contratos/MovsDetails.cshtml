@model Occupancy.Models.Contratos
 
 
@{
    ViewBag.Title = "Edo Cta";
}

<head>   
     
</head>
<body>
    <br />
    <br />
    <div class="container">
        <!-- Row 1  con dos panels Info del contrato, persona, espacio, nave, sección, local, cómo se cobra -->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <!-- Col con panel Info General-->
                    <div class="col-md-6">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div style="text-align:center;">                                    
                                    <img src="~/Content/images/Logotipo 2022 - gris.png" width="60" height="60" />
                                    <h4><strong>Estado de Cuenta - Detalle de Movimientos</strong></h4>
                                </div>                                
                            </div>
                            <div class="panel-body">
                                <p><span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span> Consulte los movimientos y saldos relacionados con el Estado de Cuenta de un Contrato - Concesión.</p>                                
                            </div>
                        </div>
                    </div>
                    <!-- Col con panel Datos Persona-->
                    <div class="col-md-6">
                        <!-- here new-->
                        <div class="col-md-12">
                            <div class="row">
                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        <div style="text-align:center;">
                                            <img src="~/Content/images/account.png" width="35" height="35" />
                                            <h4><strong>@ViewBag.personaNombre</strong></h4>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-sm-12">Folio Padrón: @ViewBag.IDPersona</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">Nombre Comercial: @ViewBag.nombreComercial</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12"><h4>Folio Contrato / Concesión : <strong>@ViewBag.IDContrato</strong></h4></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        <div style="text-align:center;">
                                            <img src="~/Content/images/accounting.png" width="35" height="35" /><h3><strong>Saldo: $ @ViewBag.Saldo</strong></h3>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-sm-4">Local :</div>
                                            <div class="col-sm-8"><strong> @ViewBag.localNombre</strong></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
        <!-- Row 2 -->
        <!-- Row con dos panels Datos Espacio y Datos del Local-->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <!-- Col con panel Info Espacio-Nave-Sección -->
                    <div class="col-md-6">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div style="text-align:center;">
                                    <img src="~/Content/images/supermarket.png" width="35" height="35" />
                                    <h4><strong>@ViewBag.EspacioNombre</strong></h4>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-4">Nave :</div>
                                    <div class="col-sm-8"><strong>@ViewBag.naveNombre</strong></div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">Sección :</div>
                                    <div class="col-sm-8"><strong>@ViewBag.seccionNombre</strong></div>
                                </div>
                            </div>
                        </div>                        
                    </div>
                    <!-- Col con panel Info Local, y datos para cobro  -->
                    <div class="col-md-6">
                        <div class="panel panel-success">
                            <div class="panel-heading">
                                <div style="text-align:center;">
                                    <img src="~/Content/images/food-stand.png" width="35" height="35" />
                                    <h3><strong>@ViewBag.localNombre</strong></h3>
                                </div>                               
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-6">Metros Cuadrados:</div>
                                    <div class="col-md-6"><strong>@ViewBag.localMcuadrados m2</strong></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">Num. Locales para cobro:</div>
                                    <div class="col-md-6"><strong>@ViewBag.localNumParaCobro</strong></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">Tipo Cuota:</div>
                                    <div class="col-md-6"><strong>@ViewBag.localTipoCuota</strong></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">Cuota Renta:<strong>$@ViewBag.localCuotaRenta</strong></div>
                                    <div class="col-md-6">Cuota Renta con Adic.: <strong>$@ViewBag.localCuotaRentaConAdic</strong></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">Importe Renta Mensual:</div>
                                    <div class="col-md-6"><strong>$@ViewBag.localImporteRenta</strong></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">Importe Renta Mensual con Adicional:</div>
                                    <div class="col-md-6"><strong>$@ViewBag.localImporteRentaconAdic</strong></div>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
         <!-- las acciones generales, solo es consulta  -->
        <div class="row">
            <div class="col-md-12">
                @Html.ActionLink("Regresar a Contratos ", "IndexAdmin")
            </div>
        </div>
        <!-- Row 3 Datatable Movimientos asociados al Contrato el iCollection miembro del objeto Contrato del Modelo -->
        <div class="row">
            <br />
            <br />
            <!-- hay registros en model.Movimientos.ToList() -->
           
           <table id="miTabla" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>Periodo</th>
                        <!-- -->
                        <th>Importe</th>
                        <th>Saldo</th>
                        <th>Naturaleza</th>
                        <th>Descripción. Observaciones</th>
                        <th>Tipo Movimiento</th>
                        <!-- -->
                        <th>Fecha Emisión</th>
                        <th>Fecha Vencimiento</th>
                        <th>Num. Orden</th>
                        <th>Pagado?</th>
                        <th>Folio Recibo</th>
                        <th>Fecha de Pago</th>
                        <th>@Html.DisplayNameFor(model => model.Movimientos.ToList().First().Corriente)</th>
                        <th>@Html.DisplayNameFor(model => model.Movimientos.ToList().First().Adicional)</th>
                        <th>@Html.DisplayNameFor(model => model.Movimientos.ToList().First().Recargos)</th>
                        <th>@Html.DisplayNameFor(model => model.Movimientos.ToList().First().Rezago)</th>
                        <th>@Html.DisplayNameFor(model => model.Movimientos.ToList().First().AdicionalRezago)</th>
                        <th>@Html.DisplayNameFor(model => model.Movimientos.ToList().First().RecargoRezago)</th>
                        <th>@Html.DisplayNameFor(model => model.Movimientos.ToList().First().Redondeo)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Movimientos)
                    {
                        if (item.TipoMovimiento.Naturaleza.Contains("CARGO"))
                        {
                            <tr class="info">                                
                                <td></td>
                                <td></td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Periodo)</strong>
                                </td>
                                <!-- -->                                
                                @if (item.Pagado == true)
                                {
                                    <td><span class="text-success"><strong>@Html.DisplayFor(modelItem => item.ImporteTotal)</strong></span></td>
                                    <td><span class="text-success"><strong>@Html.DisplayFor(modelItem => item.Saldo)</strong></span></td>
                                }
                                else
                                {
                                    <td><span class="text-danger"><strong>@Html.DisplayFor(modelItem => item.ImporteTotal)</strong></span></td>
                                    <td><span class="text-danger"><strong>@Html.DisplayFor(modelItem => item.Saldo)</strong></span></td>
                                }
                                
                                <!-- -->
                                <td>@Html.DisplayFor(modelItem => item.TipoMovimiento.Naturaleza)</td>                                
                                <td><p class="text-info"><strong>@Html.DisplayFor(modelItem => item.Observaciones)</strong></p></td>
                                <!-- -->
                                <td><small>@Html.DisplayFor(modelItem => item.TipoMovimiento.TipoMovimiento1)</small></td>
                                <td>@Html.DisplayFor(modelItem => item.FechaEmision)</td>
                                <td><strong>@Html.DisplayFor(modelItem => item.FechaVencimiento)</strong></td>
                                <td><strong>@Html.DisplayFor(modelItem => item.IDOrden)</strong></td>
                                @if (item.Pagado == true)
                                {
                                    <td><span class="text-success"><strong>Si</strong></span></td>
                                }
                                else
                                {
                                    <td><span class="text-danger"><strong>No</strong></span></td>
                                } 
                                <!-- <td>@Html.DisplayFor(modelItem => item.Pagado)</td>  -->
                                <td>@Html.DisplayFor(modelItem => item.FolioRecibo)</td>
                                <td><strong>@Html.DisplayFor(modelItem => item.FechaPago)</strong></td>
                                <!-- -->
                                <td> @Html.DisplayFor(modelItem => item.Corriente)</td>
                                <td> @Html.DisplayFor(modelItem => item.Adicional)</td>
                                <td> @Html.DisplayFor(modelItem => item.Recargos)</td>
                                <td> @Html.DisplayFor(modelItem => item.Rezago)</td>
                                <td> @Html.DisplayFor(modelItem => item.AdicionalRezago)</td>
                                <td> @Html.DisplayFor(modelItem => item.RecargoRezago)</td>
                                <td> @Html.DisplayFor(modelItem => item.Redondeo)</td>
                                <td></td>
                            </tr>
                        }
                        else
                        {
                            <tr class="success">
                                <td></td>
                                <td></td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Periodo)</strong>
                                </td>
                                <!-- -->
                                <td><p class="text-success"><strong>@Html.DisplayFor(modelItem => item.ImporteTotal)</strong></p></td>
                                <td></td>
                                <!-- -->
                                @if (item.TipoMovimiento.Naturaleza.Contains("CARGO"))
                                {
                                    <td>@Html.DisplayFor(modelItem => item.TipoMovimiento.Naturaleza)</td>
                                }
                                else
                                {
                                    <td>@Html.DisplayFor(modelItem => item.TipoMovimiento.Naturaleza)</td>

                                }                                
                                <td><p class="text-success"><strong>@Html.DisplayFor(modelItem => item.Observaciones)</strong></p></td>
                                <!-- -->
                                <td><small>@Html.DisplayFor(modelItem => item.TipoMovimiento.TipoMovimiento1)</small></td>
                                <td><strong>@Html.DisplayFor(modelItem => item.FechaEmision)</strong></td>
                                <td><strong>@Html.DisplayFor(modelItem => item.FechaVencimiento)</strong></td>
                                <td>@Html.DisplayFor(modelItem => item.IDOrden)</td>                                
                                @if (item.Pagado == true)
                                {
                                    <td><span class="text-success"><strong>Si</strong></span></td>
                                }
                                else
                                {
                                    <td><span class="text-danger"><strong>No</strong></span></td>
                                } 
                                <td><strong>@Html.DisplayFor(modelItem => item.FolioRecibo)</strong></td>
                                <td><strong>@Html.DisplayFor(modelItem => item.FechaPago)</strong></td>
                                <!-- -->
                                <td> @Html.DisplayFor(modelItem => item.Corriente)</td>
                                <td> @Html.DisplayFor(modelItem => item.Adicional)</td>
                                <td> @Html.DisplayFor(modelItem => item.Recargos)</td>
                                <td> @Html.DisplayFor(modelItem => item.Rezago)</td>
                                <td> @Html.DisplayFor(modelItem => item.AdicionalRezago)</td>
                                <td> @Html.DisplayFor(modelItem => item.RecargoRezago)</td>
                                <td> @Html.DisplayFor(modelItem => item.Redondeo)</td>
                                <td></td>
                            </tr>
                        }
                     }
                </tbody>
            </table>
        </div>       
        <br />
        <br />     
    </div>
     @section scripts{
       

        <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.24/r-2.2.7/datatables.min.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.bootstrap.min.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.colVis.min.js"></script>
