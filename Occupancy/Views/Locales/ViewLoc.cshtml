@model IEnumerable<Occupancy.Models.Locales>

@{ ViewBag.Title = "Locales"; }
<head>
    <style>
        .coloroccupied {
            background-color: #cc9900;
        }

        .colorfree {
            background-color: #40bf80;
        }
    </style>
</head>
<body>
    <br />
    <br />
    <div class="container">
        <!--  -->
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        @*<div class="panel-title"><span class="glyphicon glyphicon-home" aria-hidden="true" style="font-size: 25px"></span> <strong>   Locales de : @ViewBag.nombreEspacio</strong></div>*@
                        <div style="text-align:center;">
                            <img src="~/Content/images/food-stand.png" width="40" height="40" />
                            <h4><strong>Locales: @ViewBag.nombreDepto</strong></h4>
                        </div>
                    </div>
                    <div class="panel-body">
                        <p>Revise, edite, agregue los datos asociados a los Locales, Stands o Piso que se asignarán en los Contratos, Permisos o Concesiones. </p>
                        <p>Cada local puede registrarlo con el nombre que ya maneja (para reconocerlo fácilmente), bien sea letras combinadas con número o sólo números.</p>
                        <p></p>
                        <p></p>
                        <hr />
                        <div class="col-md-offset-4 col-md-12">
                            @using (Html.BeginForm("Create", "Locales", FormMethod.Get))
                            {
                @Html.AntiForgeryToken()
                                <input type="submit" value="Agregar Local" class="btn btn-primary" />
                                                <br>}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
        <br />
        <table id="miTabla" class="table table-striped table-bordered" style="width:100%">
            @*<table id="miTabla" class="display no wrap" style="" width:100%">*@
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IDLocal)</th>
                    <th>@Html.DisplayNameFor(model => model.Local)</th>
                    <th>@Html.DisplayNameFor(model => model.Espacios.Espacio)</th>
                    <th>@Html.DisplayNameFor(model => model.Ocupado)</th>
                    <!-- -->
                    <th>@Html.DisplayNameFor(model => model.ImporteRenta)</th>
                    <!-- -->
                    <th>@Html.DisplayNameFor(model => model.Naves.Nave)</th>
                    <th>@Html.DisplayNameFor(model => model.Secciones.Seccion)</th>
                    <th>@Html.DisplayNameFor(model => model.TipoCuotas.TipoCuota)</th>
                    <!-- -->
                    <th>@Html.DisplayNameFor(model => model.MFrente)</th>
                    <th>@Html.DisplayNameFor(model => model.MFondo)</th>
                    <th>@Html.DisplayNameFor(model => model.MCuadTotales)</th>
                    <th>@Html.DisplayNameFor(model => model.NumLocParaCobro)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IDLocal)</th>
                    <th>@Html.DisplayNameFor(model => model.Local)</th>
                    <th>@Html.DisplayNameFor(model => model.Espacios.Espacio)</th>
                    <th>@Html.DisplayNameFor(model => model.Ocupado)</th>
                    <!-- -->
                    <th>@Html.DisplayNameFor(model => model.ImporteRenta)</th>
                    <!-- -->
                    <th>@Html.DisplayNameFor(model => model.Naves.Nave)</th>
                    <th>@Html.DisplayNameFor(model => model.Secciones.Seccion)</th>
                    <th>@Html.DisplayNameFor(model => model.TipoCuotas.TipoCuota)</th>
                    <!-- -->
                    <th>@Html.DisplayNameFor(model => model.MFrente)</th>
                    <th>@Html.DisplayNameFor(model => model.MFondo)</th>
                    <th>@Html.DisplayNameFor(model => model.MCuadTotales)</th>
                    <th>@Html.DisplayNameFor(model => model.NumLocParaCobro)</th>
                    <th>Acciones</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDLocal)
        </td>
        <td>
            <p style="text-align:center;"><strong>@Html.DisplayFor(modelItem => item.Local)</strong></p>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Espacios.Espacio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ocupado)
            @{ if (item.Ocupado)
                {
<strong style="background-color:bisque">Ocupado</strong> }
else
{
<strong style="background-color:darkseagreen">Disponible</strong> } }
        </td>
        <td>
            <p style="text-align:center;"><strong>@Html.DisplayFor(modelItem => item.ImporteRenta)</strong></p>
        </td>
        <!-- -->
        <td>
            @Html.DisplayFor(modelItem => item.Naves.Nave)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Secciones.Seccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoCuotas.TipoCuota)
        </td>

        <!-- -->
        <td>
            @Html.DisplayFor(modelItem => item.MFrente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MFondo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MCuadTotales)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumLocParaCobro)
        </td>

        <td>
            @*@Html.ActionLink("Editar", "Edit", new { id = item.IDLocal }, new { @class = "btn btn-info glyphicon glyphicon-edit" })*@
            @Html.ActionLink(" ", "Edit", new { id = item.IDLocal }, new { @class = "glyphicon glyphicon-edit" })
        </td>
    </tr>
}
            </tbody>
        </table>

    </div>

